<div class="container-xxl">
    <h4>Lista de situações cadastradas:</h4>


    <form class="form-horizontal">
        <div class=" mb-2">
        <a href="#" class="btn btn-primary btn-md">Novo</a>
        <button type="submit" class="btn btn-primary ">salvar</button>
        </div>
        <div class="table-responsive">
            <table class="table table-bordered table-striped table-highlight">
                <thead>
                    <th>idSit</th>
                    <th>SINOME</th>
                    <th>SIDESCRICAO</th>
                <tbody>
                    {{#if getSitAl}}
                    {{#each getSitAl}}
                    <tr>

                        <td>{{idSit}}</td>
                        <td>{{SINOME}} </td>
                        <td>{{SIDESCRICAO}}</td>
                    </tr>
                    {{/each}}
                    {{else}}
                    <p class="d-flex align-items-center">Não há aços cadastrados</p>
                    {{/if}}
        </div>
        </tbody>
        </table>
</div>
</form>