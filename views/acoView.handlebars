                <div class="card-body">
                        <h4 class="card-title">{{ACODIGO}}</h4>
                        <b><p>{{ANOME}}</p></b>
                        <p class="card-text">{{ADESCRICAO}}</p>
                        <a href="/usuario/eletrodo/{{CODACO}}/{{CODSITUACAO}}" class="btn btn-primary">SELECIONAR</a>
                </div>
        </div>
</div>
