
{{#if acoGet}}
{{#eachUniqueAco acoGet}}
<div class="d-inline-flex p-2">
        <div class="card" style="width: 18rem;">
                <div class="card-body">
                        <h4 class="card-title">{{ACODIGO}}</h4>
                        <b><p>{{ANOME}}</p></b>
                        <p class="card-text">{{ADESCRICAO}}</p>
                        <a href="/usuario/situacao/{{CODACO}}" class="btn btn-primary">SELECIONAR</a>
                </div>
        </div>
</div>
{{/eachUniqueAco}}
{{else}}
<p class="d-flex align-items-center">Não há aços cadastrados com as informações fornecidas</p>
{{/if}}
